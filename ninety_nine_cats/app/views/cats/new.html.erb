<h1>Register Your Cat: </h1>

<form action="<%= cats_url %>", method="post">

  <label for="cat_name">Name: </label>
  <input id="cat_name" type="text" name="cat[name]">

  <br><br>

  <label for="cat_birth_date">Birthday: </label>
  <input id="cat_birth_date" type="date" name="cat[birth_date]">

  <br><br>
  
  <input type="radio" id="cat_sex" name="cat[sex]" value="M">
  <label for="cat_sex">Male</label><br>
  <input type="radio" id="cat_sex" name="cat[sex]" value="F">
  <label for="cat_sex">Female</label><br>

  <br>

  <label for="cat_color">Color: </label>
  <select id="cat_color" name="cat[color]">
    <option disabled selected>Pick a color</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="brown">Brown</option>
    <option value="orange">Orange</option>
    <option value="grey">Grey</option>
  <select>

  <br><br>

  <label for="cat_name">Description: </label><br>
  <textarea id="cat_name" name="cat[description]">Enter information about your cat!</textarea>

  <br><br>

  <input type="submit" value="Register Cat">

</form>